<?php
	
	function Function($num1,$num2){
		$t = new NumberFormatter("en", NumberFormatter::SPELLOUT);
		
		$total=0;
		for($i=0;$i<$num2;$i++){
			
			$total=$total+$num1;
		
		}
		 return $total." ".$t->format($total);
	}
	
	echo Function(1,3);
	echo Function(4,5);
	echo Function(1);
	echo Function(5,4.5);
	echo Function(3,4.5);
?>
